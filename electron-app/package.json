{
  "name": "cryptoai-desktop",
  "version": "0.2.0",
  "description": "CryptoAI Desktop - Autonomous Crypto Trading Intelligence (Windows 11 Ready)",
  "main": "main.js",
  "author": "CryptoAI Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.0"
  },
  "build": {
    "appId": "com.cryptoai.desktop",
    "productName": "CryptoAI Desktop",
    "copyright": "Copyright (c) 2025 CryptoAI Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "python-backend",
        "filter": [
          "cryptoai/**/*",
          "configs/**/*",
          "scripts/**/*",
          "pyproject.toml",
          "!**/__pycache__/**",
          "!**/*.pyc"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/256x256.png",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "publisherName": "CryptoAI Team",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": "CryptoAI",
      "include": "installer.nsh",
      "installerIcon": "assets/icons/256x256.png",
      "uninstallerIcon": "assets/icons/256x256.png",
      "installerHeaderIcon": "assets/icons/256x256.png",
      "license": "../LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/256x256.png",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Finance",
      "icon": "assets/icons",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  }
}
